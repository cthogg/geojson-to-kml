{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src",
    "../backend/listedBuildingSources/wikidata.ts",
    "src/scripts/listedBuildingSources/getListedBuildingFE.ts",
    "../backend/listedBuildingSources/listedBuildingFileTypes.ts",
    "../backend/listedBuildingSources/listedBuildingFile.ts",
    "../backend/listedBuildingSources/fetchMultipleListedBuildingsAndWriteToFile.ts",
    "../backend/listedBuildingSources/fetchListedBuilding.ts",
    "../backend/listedBuildingSources/fetchTextListedBuildingHistoricEngland.ts"
  ]
}
